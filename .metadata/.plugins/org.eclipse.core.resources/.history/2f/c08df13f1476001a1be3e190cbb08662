package aplicattion;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import com.sun.tools.javac.util.List;

import entities.Employe;


public class Program {
	

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		//Employe employee = new Employe();
		
		int empregados;
		
		List<Employe> employee = new ArrayList<>();
		
		System.out.println("Quantos empregados você tem?");
		empregados = sc.nextInt();
		
		for(int i = 0; i < empregados; i++) {
			ystem.out.println("Em se tratando do empregado #" , + i++);
			System.out.println("Qual o id do empregado? ");
			int id = sc.nextInt();
			System.out.println("Qual o nome do empregado? ");
			sc.nextLine();
			String nome = sc.nextLine();
			System.out.println("Qual o salário do empregado? ");
			double sal = sc.nextDouble();
			
			employee.add( new Employe(id, nome, sal));
		}
		
		sc.close();
				
	}

}